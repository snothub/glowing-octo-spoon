# Build stage
FROM node:18-alpine as build

WORKDIR /app

# Copy package files
COPY idui/package.json idui/package-lock.json ./

# Install dependencies
RUN npm ci

# Copy source files
COPY idui/. .

ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

# Build the application
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built assets from build stage
COPY --from=build /app/dist /usr/share/nginx/html

# Copy nginx configuration
COPY idui/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]